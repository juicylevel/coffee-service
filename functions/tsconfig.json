{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es6", "esnext", "es2015"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
